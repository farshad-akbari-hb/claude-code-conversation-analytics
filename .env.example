# MongoDB connection (required for authenticated instances)
MONGO_URI=mongodb://username:password@localhost:27017?authSource=admin
MONGO_DB=claude_logs

# Watch directory (Claude Code projects location)
CLAUDE_DIR=~/.claude/projects

# SQLite buffer location
SQLITE_PATH=~/.claude-sync/buffer.db

# Sync settings
SYNC_INTERVAL_MS=5000
BATCH_SIZE=100

# Health endpoint
HEALTH_PORT=9090
